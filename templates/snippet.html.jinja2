{% extends "_layout.jinja2" %}
{% block content %}

{% if session.id %}
<ul>
{% if snippet.person.id == session.get("id", 0) %}
  <li class="modify"><a href="{{ url_for("modify_snippet_get", id=snippet.id) }}">Modify</a></li>
  <li class="delete"><a href="{{ url_for("delete_snippet_get", id=snippet.id) }}">Delete</a></li>
{% endif %}
</ul>
{% endif %}


<ul class="snippetinfos">
  <li>By {{ snippet.person.login  | snip_user}}</li>
  <li>Posted on {{ snippet.date | date_format}}</li>
  <li>Syntax: {{ lexername }}</li>
</ul>
{{ snippet.text | safe}}

{% if session.id  %}
<ul>
{% if snippet.person.id == session.get("id", 0) %}
  <li class="modify"><a href="{{ url_for("modify_snippet_get", id=snippet.id) }}">Modify</a></li>
  <li class="delete"><a href="{{ url_for("delete_snippet_get", id=snippet.id) }}">Delete</a></li>
{% endif %}
</ul>
{% endif %}

{% endblock content %}
