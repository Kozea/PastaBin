{% extends "_layout.jinja2" %}
{% block content %}

<ul>
  <li class="fork"><a href="{{ url_for("fork_snippet_get", snippet_id=snippet.id) }}">Fork</a></li>
{% if snippet.person.id == session.get("id", 0) %}
  <li class="modify"><a href="{{ url_for("modify_snippet_get", snippet_id=snippet.id) }}">Modify</a></li>
  <li class="delete"><a href="{{ url_for("delete_snippet_get", snippet_id=snippet.id) }}">Delete</a></li>
{% endif %}
</ul>


<ul class="snippetinfos">
  <li>By {{ snippet.person.login or 'Guest' }}</li>
  <li>Posted on {{ snippet.date | date_format}}</li>
  <li>Syntax: {{ lexername }}</li>
</ul>
{{ snippet.text | safe}}

<ul>
  <li class="fork"><a href="{{ url_for("fork_snippet_get", snippet_id=snippet.id) }}">Fork</a></li>
{% if snippet.person.id == session.get("id", 0) %}
  <li class="modify"><a href="{{ url_for("modify_snippet_get", snippet_id=snippet.id) }}">Modify</a></li>
  <li class="delete"><a href="{{ url_for("delete_snippet_get", snippet_id=snippet.id) }}">Delete</a></li>
{% endif %}
</ul>

{% endblock content %}
