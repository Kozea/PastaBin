  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>

<body>
  <header>
    <h1><a href="/">PastaBin</a></h1>

    {% block connect %}
    {% endblock connect %}
  </header>

  <nav>
    <ul>
{% for element in menu %}
{% set active = element.link != request.path %}
      <li>
        {%- if active %}<a href="{{ element.link }}">{% endif -%}
          {{ element.name }}
        {%- if active %}</a>{% endif -%}
      </li>
{% endfor %}   
    </ul>
  </nav>

{% block content %}
{% endblock content %}

  <footer>
    <ul>
      <li><a href="http://multicorn.org/">Powered by Multicorn</a></li>
      <!--<li><a href="http://www.csstyle.org/">Styled by CSStyle</a></li>
      <li><a href="http://validator.w3.org/check?uri=referer">Optimized for Standards</a></li>-->
    </ul>
  </footer>
</body>

</html>
