{% extends "_layout.jinja2" %}
{% block content %}
<form action="{{ url_for("account") }}" method="post">
  <fieldset>
    <legend>Informations</legend>
    <label for="login">Login:</label> <input type="text" name="login" id="login" value="{{ person.login }}" />
    <label for="password1">Password:</label> <input type="password" name="password1" id="password1" value="{{ person.password }}" />
    <label for="password2">Password (verification):</label> <input type="password" name="password2" id="password2" value="{{ person.password }}" />
    <label for="email">Email:</label> <input type="text" name="email" id="email" value="{{ person.email }}" />
  </fieldset>
  <div class="btn">
    <a href="{{ url_for("index") }}">Cancel</a>
    <input type="submit" name="register" value="Update my account!" />
  </div>
</form>
{% endblock content %}
