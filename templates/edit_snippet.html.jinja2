{% extends "_layout.jinja2" %}
{% block content %}
<form action="{{ action }}" method="post">
  <fieldset>
    <legend>Informations</legend>
    <label for="snip_title">Title:</label> <input type="text" name="snip_title" id="snip_title" value="{{ snip_title }}" />
    <label for="snip_language">Language:</label> <input type="text" name="snip_language" id="snip_language" list="language_list" value="{{ snip_language }}" />
    <datalist id="language_list">
    {% for lexer in lexerslist %}
      <option value="{{ lexer[1] }}">{{ lexer[0] }}</option>
    {% endfor %}
    </datalist>
  </fieldset>
  <fieldset>
    <legend>Text</legend>
    <textarea name="snip_text" id="snip_text" rows="14" cols="80">{{ snip_text }}</textarea>
  </fieldset>
  <div class="btn">
    <a href="{{ cancel }}">Cancel</a>
    <input type="submit" name="repasta" value="Pasta!" />
  </div>
</form>
{% endblock content %}
