{% extends "_layout.jinja2" %}
{% block content %}
<h3>About PastaBin</h3>
{{ page.doc|safe }}

<h3>Last snippets</h3>
{% if snippets %}
  <ul class="index">
  {% for snippet in snippets %}
    <li><a href="{{ url_for("view_snippet", snippet_id=snippet.id)}}" >{{ snippet.title or 'Unnamed snippet' }} <span>(posted by {{ snippet.person.login or 'Guest' }}, on {{ snippet.date | date_format }})</span></a></li>
  {% endfor %}
    </ul>
{% else %}
  <p class="warning">There is no snippet yet !</p>
{% endif %}
{% endblock content %}
